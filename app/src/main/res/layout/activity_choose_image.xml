<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg_app"
    tools:context=".ui.choose_image.ChooseImageActivity">

    <!-- layoutActionBar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- btnBack -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_marginBaseline="10dp" />

        <!-- linearLayout -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack">

            <!-- tvFolder -->
            <TextView
                android:id="@+id/tvFolder"
                style="@style/single_marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="start|center_vertical"
                android:maxWidth="200dp"
                android:textColor="@color/black_40"
                android:textSize="21sp" />

            <!-- btnMore -->
            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_show_more_image" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- rcvImageSub -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvImageSub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="12dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/spBottom"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar"
        app:spanCount="3"
        tools:listitem="@layout/item_image_sub" />

    <!-- tvNoItem -->
    <TextView
        android:id="@+id/tvNoItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/no_item_here"
        android:textColor="#042628"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar" />

    <!-- layoutAllImage -->
    <FrameLayout
        android:id="@+id/layoutAllImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F1F5F5"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/spBottom"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar">

        <!-- rcvAllImage -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvAllImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_all_image" />
    </FrameLayout>

    <!--    spBottom-->
    <Space
        android:id="@+id/spBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>