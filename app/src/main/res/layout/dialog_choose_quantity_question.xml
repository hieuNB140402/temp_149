<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    flOutSide-->
    <FrameLayout
        android:id="@+id/flOutSide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        layoutMain-->
        <LinearLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_16_solid_white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--            tvTitle-->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/number_of_questions"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!--                tv10Question-->
            <TextView
                android:id="@+id/tv10Question"
                style="@style/single_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_12_stroke_pink_solid_white"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingVertical="9dp"
                android:text="@string/value_questions"
                android:textColor="@color/pink_ff"
                android:textSize="14sp" />

            <!--            tv15Question-->
            <TextView
                android:id="@+id/tv15Question"
                style="@style/single_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_12_stroke_pink_solid_white"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingVertical="9dp"
                android:text="@string/value_questions"
                android:textColor="@color/pink_ff"
                android:textSize="14sp" />

            <!--            tv20Question-->
            <TextView
                android:id="@+id/tv20Question"
                style="@style/single_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_12_stroke_pink_solid_white"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingVertical="9dp"
                android:text="@string/value_questions"
                android:textColor="@color/pink_ff"
                android:textSize="14sp" />
        </LinearLayout>

    </FrameLayout>
</layout>