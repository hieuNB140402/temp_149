<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg_app"
    tools:context=".ui.question_test.QuestionTestActivity">

    <!--    flActionBar-->
    <FrameLayout
        android:id="@+id/flActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/actionBar"
            layout="@layout/layout_actionbar" />
    </FrameLayout>

    <!--    tvTitle-->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:text="@string/answer_the_question_first_and_then_let_your_lover_answer_to_calculate_the_compatibility_score"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/flActionBar" />

    <!--    lnlState-->
    <LinearLayout
        android:id="@+id/lnlState"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <!--        vState1-->
        <View
            android:id="@+id/vState1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_6_solid_pink_ff" />

        <!--        vState2-->
        <View
            android:id="@+id/vState2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_6_solid_gray" />

        <!--        vState3-->
        <View
            android:id="@+id/vState3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_6_solid_gray" />
    </LinearLayout>

    <!--    rcvQuestionTest-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvQuestionTest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlState"
        tools:itemCount="10"
        tools:listitem="@layout/item_question_test" />

</androidx.constraintlayout.widget.ConstraintLayout>