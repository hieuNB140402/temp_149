<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg_app"
    tools:context=".ui.result.ResultActivity">

    <!--    flActionBar-->
    <FrameLayout
        android:id="@+id/flActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/actionBar"
            layout="@layout/layout_actionbar" />
    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flActionBar">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--    ctlExport-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctlExport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--    lnlTextTop-->
                <LinearLayout
                    android:id="@+id/lnlTextTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:weightSum="10"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--        tvLeft-->
                    <TextView
                        android:id="@+id/tvLeft"
                        style="@style/single_marquee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/cookie_regular"
                        android:gravity="center"
                        android:textColor="#C71414"
                        android:textSize="28sp" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_plush"
                            app:tint="#C71414" />
                    </FrameLayout>

                    <!--        tvRight-->
                    <TextView
                        android:id="@+id/tvRight"
                        style="@style/single_marquee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/cookie_regular"
                        android:gravity="center"
                        android:textColor="#C71414"
                        android:textSize="28sp" />
                </LinearLayout>

                <com.love.compatibility.core.custom.view.HeartFillView
                    android:id="@+id/heartView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="70dp"
                    app:layout_constraintDimensionRatio="1.16:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lnlTextTop" />

                <!--                tvPercent-->
                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="44sp"
                    android:translationY="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/heartView"
                    app:layout_constraintEnd_toEndOf="@+id/heartView"
                    app:layout_constraintStart_toStartOf="@+id/heartView"
                    app:layout_constraintTop_toTopOf="@+id/heartView" />

                <!--            tvComment-->
                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="37dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_16_stroke_pink_solid_white"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="28dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/heartView" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingHorizontal="26dp">

                <!--                btnTryAgain-->
                <LinearLayout
                    android:id="@+id/btnTryAgain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_16_solid_red_c7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_reset_white" />

                    <!--                    tvTryAgain-->
                    <TextView
                        android:id="@+id/tvTryAgain"
                        style="@style/single_marquee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/try_again"
                        android:textColor="@color/white_bg_app"
                        android:textSize="20sp" />

                </LinearLayout>

                <!--                btnShare-->
                <LinearLayout
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_16_solid_blue_58"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_share_white" />

                    <!--                    tvShare-->
                    <TextView
                        android:id="@+id/tvShare"
                        style="@style/single_marquee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/share"
                        android:textColor="@color/white_bg_app"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <!--                btnShowResult-->
            <LinearLayout
                android:id="@+id/btnShowResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_16_solid_green_00"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="14dp"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_show_result" />

                <TextView
                    style="@style/single_marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/show_result"
                    android:textColor="@color/white_bg_app"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>