<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white_bg_app"
    tools:context=".ui.show_result_question_test.ShowResultQuestionTestActivity">

    <!--    flActionBar-->
    <FrameLayout
        android:id="@+id/flActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/actionBar"
            layout="@layout/layout_actionbar" />
    </FrameLayout>

    <!--    lnlStatus-->
    <LinearLayout
        android:id="@+id/lnlStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/flActionBar">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:layout_weight="1"
            android:background="@drawable/bg_8_stroke_cut_green_solid_green"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp">

            <!--            imvLeft-->
            <ImageView
                android:id="@+id/imvLeft"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginVertical="6dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_correct" />

            <!--            tvLeft-->
            <TextView
                android:id="@+id/tvLeft"
                style="@style/single_marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#2F7B00"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_8_stroke_cut_red_solid_red"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp">

            <!--            imvRight-->
            <ImageView
                android:id="@+id/imvRight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginVertical="6dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_incorrect" />

            <!--            tvRight-->
            <TextView
                android:id="@+id/tvRight"
                style="@style/single_marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#C71414"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <!--    rcvQuestionTest-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvQuestionTest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlStatus"
        tools:itemCount="10"
        tools:listitem="@layout/item_question_test" />

</androidx.constraintlayout.widget.ConstraintLayout>